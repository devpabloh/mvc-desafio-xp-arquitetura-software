generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  phone String

  // relacionamento com a tabela de pedido
  orders Order[]

   @@map("clientes")
}

model Order{
  id Int @id @default(autoincrement())
  order String
  clientId Int

  client Client @relation(fields: [clientId], references: [id]) // aqui estamos dizendo que o clientID está da tabela Pedido está relacionado com o ID da tabela client

  @@map("pedidos")
}